{
  "name": "modernize",
  "version": "1.0.0",
  "description": "Assignment for Modernize interview",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel serve watch:sass",
    "serve": "live-server",
    "watch:sass": "node-sass assets/stylesheets/application.scss assets/stylesheets/application.css -w",
    "compile:sass": "node-sass assets/stylesheets/application.scss assets/stylesheets/application.comp.css",
    "concat:css": "concat -o assets/stylesheets/application.concat.css assets/stylesheets/application.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' assets/stylesheets/application.concat.css -o assets/stylesheets/application.prefix.css",
    "compress:css": "node-sass assets/stylesheets/application.prefix.css assets/stylesheets/application.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "build:js": "uglifyjs assets/javascripts/application.js --compress -o assets/javascripts/application.js",
    "build": "npm-run-all build:css build:js"
  },
  "author": "Barbara M Brina",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "concat": "^1.0.3",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {}
}
